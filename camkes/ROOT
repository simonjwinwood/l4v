chapter CAmkES

session CamkesAdlSpec (Camkes) in "adl-spec" = Access +
  options [document = pdf]
  theories
    "Wellformed_CAMKES"
    "Examples_CAMKES"
  document_files
    "imgs/compilation.pdf"
    "imgs/composite-passthrough.pdf"
    "imgs/dataport.pdf"
